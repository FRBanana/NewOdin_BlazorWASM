@page "/gantt"
@inject IJSRuntime JSRuntime

<h3>Gantt</h3>
<div id="gantt_here" style="width: 100%; height: 100vh;"></div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initGantt");
        }
    }
}